{
  "display": "Node 14",
  "compilerOptions": {
    "lib": [
      "es2019",
      "es2020.promise",
      "es2020.bigint",
      "es2020.string",
      "DOM"
    ],
    "module": "ESNEXT",
    "target": "ES2019",
    "outDir": "./dist/esm",

    // "declaration": true,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["./src", "./@types"],
  "exclude": ["**/__tests__/**"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
